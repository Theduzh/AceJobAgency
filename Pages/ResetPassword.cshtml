@page
@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model PracAssignment.Pages.ResetPasswordModel
@{
}
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Change Password</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="RPModel.UserEmail" />
                <input type="hidden" asp-for="RPModel.Token" />

                <div class="mb-3">
                    <label class="form-label" asp-for="RPModel.NewPassword">Password</label>
                    <input type="password" asp-for="RPModel.NewPassword" class="form-control" />
                    <span asp-validaton-for="RPModel.NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RPModel.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="RPModel.ConfirmPassword" class="form-control" />
                    <span asp-validaton-for="RPModel.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>